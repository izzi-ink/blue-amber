---
import linkedIn from "../images/linkedin-logo.svg";
import github from "../images/logo-github-circle.svg";
import izziInkLogo from "../images/footer-logo.svg";
import fem from "../images/fem.svg";
import figma from "../images/figma-logo.svg";
---

<footer class="footer-containter">
    <div class="container-footer">
        <div>
            <h3>Izzi Ink</h3>
            <p>Houtvollop Group &#169 2023</p>
        </div>
        <div>
            <h3>Links</h3>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/blog">Blog</a></li>
                <li>
                    <a href="https://github.com/izzi-ink" target="_blank"
                        ><img
                            src={github}
                            width="48"
                            height="48"
                            alt="Izzi Ink on GitHub"
                        /></a
                    >
                </li>
                <li>
                    <a
                        href="https://frontendmasters.com/u/Izzi/"
                        target="_blank"
                        ><img
                            src={fem}
                            width="48"
                            height="48"
                            alt="Izzi Ink on Frontend Masters"
                        /></a
                    >
                </li>
                <li>
                    <a
                        href="https://frontendmasters.com/u/Izzi/"
                        target="_blank"
                        ><img
                            src={figma}
                            width="20"
                            height="30"
                            alt="Izzi Ink on Frontend Masters"
                        /></a
                    >
                </li>
            </ul>
        </div>
    </div>
</footer>

<style>
    .container-footer {
        background: var(--color-primary);
        color: #fff;
        text-align: center;
        padding: 20px;
        margin-top: 60px;
    }

    .container-footer .footer-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .container-footer a {
        color: var(--desert-sand);
    }

    p {
        margin: 0;
        justify-content: center;
    }

    .footer a:hover {
        text-decoration: underline;
    }

    .footer h3 {
        margin-bottom: 10px;
    }

    .footer div:nth-child(1) {
        text-align: left;
    }

    @media (max-width: 500px) {
        .footer div:nth-child(2) {
            display: none;
        }
    }
</style>
