---
import Header from "../components/Header.astro";
import "../styles/global.css";
export interface Props {
	title?: string;
}

const { title = `Izzi Ink Astronaut ` } = Astro.props as Props;
import { SEO } from "astro-seo";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
			rel="stylesheet"
		/>

		<title>{title}</title>
		<meta
			name="description"
			content="I am a Solutions Architect with a focus on Front-end Technology and Design. I help teams to design and build future-friendly products that customers love."
		/>

		<SEO
			title="Izzi Ink Astronaut"
			description="I am a Solutions Architect with a focus on Front-end Technology and Design. I help teams to design and build future-friendly products that customers love."
			canonical="https://www.izzink.com"
			image="https://www.izzink.com/images/izzi-ink-preview.png"
			twitter={{
				creator: "@jonasmerlins1",
			}}
			extend={{
				// extending the default link tags
				link: [{ rel: "icon", href: "/favicon.ico" }],
				// extending the default meta tags
				meta: [
					{
						name: "twitter:image",
						content:
							"https://user-images.githubusercontent.com/5182256/131216951-8f74f425-f775-463d-a11b-0e01ad9fce8d.png",
					},
					{
						name: "twitter:title",
						content: "Tinker Tailor Soldier Spy",
					},
					{ name: "twitter:description", content: "Agent" },
				],
			}}
		/>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>
