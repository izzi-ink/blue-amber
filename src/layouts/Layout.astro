---
import Header from "../components/Header.astro";
import "../styles/global.css";
export interface Props {
	title?: string;
}

const { title = `Izzi Ink Astronaut ` } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta
			property="og:image"
			content="https://izzi.ink/izzi-ink-preview.png"
		/>
		<meta
			property="og:image:secure_url"
			content="https://izzi.ink/izzi-ink-preview.png"
		/>
		<meta property="og:image:type" content="image/png" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="627" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap"
			rel="stylesheet"
		/>

		<title>{title}</title>
		<meta
			name="description"
			content="I am a Solutions Architect with a focus on Front-end Technology and Design. I help teams to design and build future-friendly products that customers love."
		/>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>
